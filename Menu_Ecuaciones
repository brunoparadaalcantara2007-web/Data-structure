// ConsoleApplication1.cpp : Este archivo contiene la función "main". La ejecución del programa comienza y termina ahí.
//

#include <iostream>
#include <cmath>
#include <stdalign.h>
using namespace std;

int mayor(int a, int b, int c);
double ciclo(int x);
double pesototal(int cantidadProductos);
int suma(int x1, int x2);

int main() {
    int opcion;
    system("color 02");

    do {
        cout << "Elige una opcion:" << endl;
        cout << "1. Determinar el mayor de tres numeros" << endl;
        cout << "2. Calcular la serie con ciclo For" << endl;
        cout << "3. Calcular el peso total de productos" << endl;
        cout << "4. La suma de 2 numeros" << endl;
        cout << "0. Salir" << endl;
        cout << "Opcion: ";
        cin >> opcion;

        switch (opcion) {
        case 1: {
            int a = 0, b = 0, c = 0;
            cout << "Introduce el primer numero: ";
            cin >> a;
            cout << "Introduce el segundo numero: ";
            cin >> b;
            cout << "Introduce el tercer numero: ";
            cin >> c;
            mayor(a, b, c);
            break;
        }
        case 2: {
            int x;
            cout << "Introduce el valor de x: ";
            cin >> x;
            ciclo(x);
            break;
        }
        case 3: {
            int cantidad;
            cout << "Cuantos productos deseas ingresar? ";
            cin >> cantidad;
            pesototal(cantidad);
            break;
        }
        case 4: {
            int x1, x2;
            cout << "Introduce el primer numero:  ";
            cin >> x1;
            cout << "Introduce el segundo numero:  ";
            cin >> x2;
            suma(x1, x2);

            break;
        }
        case 0:
            cout << "Hasta luego!" << endl;
            break;
        default:
            cout << "Opcion no valida. Intenta de nuevo." << endl;
            break;
        }

    } while (opcion != 0);

    return 0;
}

int mayor(int a, int b, int c) {
    if (a == b && b == c) {
        cout << "Todos los numeros son iguales.";
        return a;
    }
    else if (a >= b && a >= c) {
        cout << "El mayor numero es: " << a << endl;
        return a;
    }
    else if (b >= a && b >= c) {
        cout << "El mayor numero es: " << b << endl;
        return b;
    }
    else {
        cout << "El mayor numero es: " << c << endl;
        return c;
    }
}

double ciclo(int x) {
    double suma = 0;

    for (int b = 1; b <= 10; ++b) {
        suma += pow(x, b);
    }

    cout << "La suma total de la serie es: " << suma << endl;
    return suma;
}

double pesototal(int cantidadProductos) {
    double pesoTotal = 0.0;

    for (int i = 1; i <= cantidadProductos; i++) {
        double peso;
        cout << "Ingresa el peso del producto " << i << " (en gramos): " << endl;
        cin >> peso;
        pesoTotal += peso;
    }

    cout << "El peso total de los productos es: " << pesoTotal << " gramos." << endl;
    return pesoTotal;
}

int suma(int x1, int x2)
{
    double suma = x1 + x2;
    cout << "La suma de dos numeros es: " << suma << endl;
    return suma;
}

